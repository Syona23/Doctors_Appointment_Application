<!DOCTYPE html>
<html>
<head>
<title>Support Messages | Admin</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>

<body class="bg-light">

<div class="container mt-5">
  <h2 class="mb-4">Support Messages</h2>

  <table class="table table-bordered table-hover bg-white shadow-sm">
    <thead class="table-primary">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Date</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% tickets.forEach(t => { %>
      <tr>
        <td><%= t.name %></td>
        <td><%= t.email %></td>
        <td><%= t.subject %></td>
        <td><%= t.date.toLocaleString() %></td>
        <td>
          <% if(t.status === "resolved") { %>
            <span class="badge bg-success">Resolved</span>
          <% } else { %>
            <span class="badge bg-warning text-dark">Open</span>
          <% } %>
        </td>

        <td>
          <a href="/admin/support/<%= t._id || t.id %>" class="btn btn-sm btn-info text-white">View</a>

          <% if(t.status !== "resolved") { %>
          <form action="/admin/support/resolve/<%= t._id || t.id %>" method="POST" style="display:inline;">
            <button class="btn btn-sm btn-success">Resolve</button>
          </form>
          <% } %>

          <form action="/admin/support/delete/<%= t._id || t.id %>" method="POST" style="display:inline;">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

</body>
</html>

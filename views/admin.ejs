<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Doctor Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f0f4f8;
      font-family: "Poppins", sans-serif;
    }

    .dashboard-container {
      max-width: 1200px;
      margin: 60px auto;
      padding: 30px;
      background: #ffffff;
      border-radius: 20px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      color: #007bff;
      font-weight: 600;
      position: relative;
    }

    h2::before {
      content: "ðŸ“‹";
      position: absolute;
      left: -40px;
      font-size: 2rem;
    }

    table {
      border-radius: 12px;
      overflow: hidden;
    }

    table thead tr {
      background: #007bff;
      color: #ffffff;
    }

    table tbody tr:hover {
      background: rgba(0, 123, 255, 0.1);
    }

    .status-btn {
      border-radius: 8px;
      font-size: 0.85rem;
      padding: 6px 10px;
      margin: 2px 2px 2px 0;
      transition: 0.3s;
    }

    .status-btn:hover {
      opacity: 0.85;
    }

    .badge {
      font-size: 0.85rem;
      padding: 5px 10px;
    }
  </style>
</head>
<body>
  <%- include("partials/navbar"); %>
<br>

  <div class="dashboard-container">
    <h2>Appointments Management</h2>

    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th>#</th>
          <th>Patient</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Date</th>
          <th>Time</th>
          <th>Reason</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% appointments.forEach((appt, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= appt.name %></td>
            <td><%= appt.email %></td>
            <td><%= appt.phone %></td>
            <td><%= appt.date %></td>
            <td><%= appt.time %></td>
            <td><%= appt.reason %></td>
            <td>
              <% if(appt.status === "pending"){ %>
                <span class="badge bg-warning text-dark">Pending</span>
              <% } else if(appt.status === "accepted"){ %>
                <span class="badge bg-success">Accepted</span>
              <% } else { %>
                <span class="badge bg-secondary">Completed</span>
              <% } %>
            </td>
            <td>
              <form action="/admin/update/<%= appt._id || appt.id %>" method="POST" style="display:inline;">
                <button type="submit" name="status" value="accepted" class="btn btn-success btn-sm status-btn">Accept</button>
              </form>
              <form action="/admin/update/<%= appt._id || appt.id %>" method="POST" style="display:inline;">
                <button type="submit" name="status" value="pending" class="btn btn-warning btn-sm status-btn">Pending</button>
              </form>
              <form action="/admin/update/<%= appt._id || appt.id %>" method="POST" style="display:inline;">
                <button type="submit" name="status" value="completed" class="btn btn-secondary btn-sm status-btn">Complete</button>
              </form>
              <form action="/admin/delete/<%= appt._id || appt.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this appointment?');">
                <button type="submit" class="btn btn-danger btn-sm status-btn">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include("partials/footer"); %>
</body>
</html>
